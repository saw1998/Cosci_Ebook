<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/scrollView"
    tools:context=".ui.all_books.ShowBookDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="I Wonder..."
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/tv_iwonder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textStyle="normal"
            android:text="...."
            android:textColor="#555555"
            android:textSize="17sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="So, I plan to..."
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_iplan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textStyle="normal"
            android:text="...."
            android:textColor="#555555"
            android:textSize="17sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Simulation and Results"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"/>


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <GridLayout
                android:id="@+id/gridLayout_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:columnCount="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_simulation_button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_marginRight="20sp"
                    android:text="RI of liquid"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_margin="10dp"
                    android:layout_marginRight="20sp"
                    android:text="Play"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="185sp"
                    android:layout_margin="10sp"
                    android:text="Result"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="normal" />

            </GridLayout>
        </HorizontalScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="I Found..."
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_ifound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textStyle="normal"
            android:text="...."
            android:textColor="#555555"
            android:textSize="17sp"
         />
        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="So, I think..."
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_ithink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_margin="7dp"
            android:text="...."
            android:textColor="#555555"
            android:textStyle="normal"
            />
        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>

        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>


    </LinearLayout>


</ScrollView>