<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.LoginActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/profile_image"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorInput"/>

    <EditText
        android:id="@+id/user_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_profile_image"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/edit_profile"
        android:textColor="@color/colorDarkGrey"
        android:textStyle="bold"
        android:background="@drawable/input"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/user_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_login_email"
        android:inputType="textPassword"
        android:hint="Password"
        android:drawableStart="@drawable/password"
        android:textAlignment="textStart"
        android:textColor="@color/colorDarkGrey"
        android:textStyle="bold"
        android:background="@drawable/input"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_login_password"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="Forgot Password"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/colorInput"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/new_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorInput"
        android:layout_below="@id/user_login_password"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_password"
        android:text="Login"
        android:textAlignment="center"
        android:drawableStart="@drawable/button"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>


</RelativeLayout>